<div class="contact-page">
    <h2 data-lang-key="title">contact</h2>
    <p data-lang-key="description">
        Une question concernant votre projet ? Un simple bonjour ? Ecrivez-moi
        et je reviendrai vers vous rapidement.
    </p>

    <% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger"><%= error_msg %></div>
    <% } %>

    <div class="contact-form">
        <form action="/send-email" method="POST">
            <div class="contact-inside-form glass-bg">
                <input
                    type="text"
                    placeholder="votre nom"
                    name="name"
                    id="name"
                    autocomplete="name"
                    data-lang-key="name-placeholder"
                />

                <input
                    type="text"
                    placeholder="votre@email.com"
                    name="email"
                    id="email"
                    autocomplete="email"
                    data-lang-key="email-placeholder"
                />

                <input
                    type="text"
                    placeholder="objet du message"
                    name="subject"
                    id="subject"
                    data-lang-key="subject-placeholder"
                />

                <textarea
                    name="message"
                    placeholder="dire bonjour!"
                    cols="30"
                    rows="7"
                    id="message"
                    data-lang-key="message-placeholder"
                ></textarea>
            </div>

            <div class="g-recaptcha" data-sitekey="<%= siteKey %>"></div>

            <div class="contact-send-btn">
                <input
                    type="submit"
                    value="envoyer"
                    class="btn"
                    data-lang-key="send-btn"
                />
            </div>
        </form>
    </div>

    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</div>
